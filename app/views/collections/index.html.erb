<p id="notice"><%= notice %></p>

<h1>Collections</h1>
<%= link_to 'logout', destroy_user_session_path, method: :delete %>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Name</th>
      <th>Description</th>
      <th>Price</th>
      <th>Quantity</th>
      <th>Available hours morning</th>
      <th>Available hours night</th>
      <th>Available until</th>
      <th>Longitude</th>
      <th>Latitude</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @collections.each do |collection| %>
      <tr>
        <td><%= collection.name %></td>
        <td><%= collection.description %></td>
        <td><%= collection.price %></td>
        <td><%= collection.quantity %></td>
        <td><%= collection.available_hours_morning %></td>
        <td><%= collection.available_hours_night %></td>
        <td><%= collection.available_until %></td>
        <td><%= collection.longitude %></td>
        <td><%= collection.latitude %></td>
        <td><%= link_to 'Show', collection %></td>
        <td><%= link_to 'Edit', edit_collection_path(collection) %></td>
        <td><%= link_to 'Destroy', collection, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<% if can? :create, Collection %>
<%= link_to 'New Collection', new_collection_path %>
<% end %>
