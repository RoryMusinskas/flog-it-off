<head>
  <link href='https://api.mapbox.com/mapbox-gl-js/v1.12.0/mapbox-gl.css' rel='stylesheet' />
</head>
<%= content_for :js_libs, "modernizr gmaps flot chartjs demo-dashboard demo-gmaps" %>

<div class="container-fluid">
  <%= render partial: 'content_blocks/app_navs/navbar' %>
  <p id="notice"><%= notice %></p>
  <%# <%= render partial: 'dashboard/bs_table' %1> %>
  <%# <%= render partial: 'dashboard/metrics_cards' %1> %>
  <%# <%= render partial: 'dashboard/metric_charts' %1> %>
  <%# <%= render partial: 'dashboard/sales_refunds' %1> %>
  <%# <%= render partial: 'dashboard/server_activity' %1> %>
  <%# <%= render partial: 'dashboard/most_active_users' %1> %>
  <%= render partial: 'dashboard/online_users' %>
</div>
<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Name</th>
      <th>Description</th>
      <th>Price</th>
      <th>Quantity</th>
      <th>Available hours morning</th>
      <th>Available hours night</th>
      <th>Available until</th>
      <th>Longitude</th>
      <th>Latitude</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @collections.each do |collection| %>
      <tr>
        <td><%= collection.name %></td>
        <td><%= collection.description %></td>
        <td><%= collection.price %></td>
        <td><%= collection.quantity %></td>
        <td><%= collection.available_hours_morning %></td>
        <td><%= collection.available_hours_night %></td>
        <td><%= collection.available_until %></td>
        <td><%= collection.longitude %></td>
        <td><%= collection.latitude %></td>
        <td><%= link_to 'Show', collection %></td>
        <td><%= link_to 'Edit', edit_collection_path(collection) %></td>
        <td><%= link_to 'Destroy', collection, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
